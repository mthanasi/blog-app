<%include partials/header.ejs%>

<div class="ui main text container segment">
    <div class="ui huge header">Edit Blog - <%=blog.title%></div>
    <!--we need to send form to update route-->
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <!--adding client side validation-->
            <input type="text" name="blog[title]" value="<%=blog.title%>" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%=blog.body%></textarea>
        </div>
        <input class="ui inverted big violet button" type="submit">
    </form>
</div>

<%include partials/footer.ejs%>